{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,

    "baseUrl": ".",
    "module": "Node16",
    "moduleResolution": "Node16",
    "target": "ESNext",

    "noEmit": true
  },
  "include": [
    "src",
    "tests"
  ]
}
