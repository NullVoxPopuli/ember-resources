{
  "private": "true",
  "workspaces": [
    "ember-resources",
    "docs",
    "testing/*"
  ],
  "repository": "https://github.com/NullVoxPopuli/ember-resources",
  "license": "MIT",
  "author": "NullVoxPopuli",
  "scripts": {
    "build": "pnpm run --filter ember-resources build",
    "build:docs": "pnpm run --filter docs docs:collect",
    "start:docs": "pnpm run build:docs --watch",
    "prepare": "pnpm run build"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@nullvoxpopuli/eslint-configs": "^2.1.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.1",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "loader.js": "^4.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2"
  },
  "volta": {
    "node": "16.14.0",
    "yarn": "1.22.17",
    "npm": "8.5.2"
  },
  "packageManager": "pnpm@6.32.1",
  "pnpm": {
    "overrides": {
      "@embroider/addon-shim": "1.5.0"
    }
  },
  "engines": {
    "node": ">= 12"
  }
}
